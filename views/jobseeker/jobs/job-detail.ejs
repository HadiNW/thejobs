<!DOCTYPE html>
<html lang="en">
 <%- include('../partials/header')%>

  <body class="nav-on-header smart-nav">

    <!-- Navigation bar -->
    <%-include('../partials/menu') %>
      <header class="page-header bg-img size-lg" style="background-image: url(http://localhost:8000/static/assets/img/bg-banner2.jpg)">
      <div class="container">
        <div class="header-detail">
          <img class="logo" src="http://localhost:8000/static/assets/img/logo-google.jpg" alt="">
          <div class="hgroup">
            <h1><%= job.name%></h1>
            <h3><a href="#"><%= job.Company.name%></a></h3>
          </div>
          <hr>
          <p class="lead"><%= job.description%></p>

          <ul class="details cols-3">
            <li>
              <i class="fa fa-map-marker"></i>
              <span><%= job.location%></span>
            </li>

           

            <li>
              <i class="fa fa-money"></i>
              <span>Rp. <%= job.getYearSalary() %> / year</span>
            </li>

            <li>
              <i class="fa fa-certificate"></i>
              <a href="#"><%= job.academic%></a>
            </li>
          </ul>

          <div class="button-group">
           
            <div class="action-buttons">
              <a class="btn btn-primary" href="/jobs/<%= job.id%>/apply">Apply Now</a>
             
            </div>
          </div>

        </div>
      </div>
    </header>
    <main>

        <!-- Job detail -->
        <section>
          <div class="container">
  
            <p><%= job.Company.description%></p>
  
          
  
          
          
  
          </div>
        </section>
        <!-- END Job detail -->
  
      </main>
    <%- include('../partials/footer')%>
  </body>
</html>
