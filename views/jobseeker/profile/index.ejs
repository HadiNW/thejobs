<!DOCTYPE html>
<html lang="en">
 <%- include('../partials/header')%>

  <body class="nav-on-header smart-nav">

    <!-- Navigation bar -->
    <%-include('../partials/menu') %>
    <header class="page-header bg-img" style="background-image: url(assets/img/bg-banner1.jpg)">
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-sm-4">
              <img src="http://localhost:8000/static/uploads/photos/<%= customer.photo%>" alt="">
            </div>
  
            <div class="col-xs-12 col-sm-8 header-detail">
              <div class="hgroup">
                <h1><%= customer.name%></h1>
                <h3><%= customer.headline%></h3>
              </div>
              <hr>
              <p class="lead">Profile deskripsi.</p>
  
              <ul class="details cols-2">
                <li>
                  <i class="fa fa-map-marker"></i>
                  <span><%= customer.location%></span>
                </li>           
  
                <li>
                  <i class="fa fa-birthday-cake"></i>
                  <span><%= customer.birthdate%></span>
                </li>
  
                <li>
                  <i class="fa fa-phone"></i>
                  <span><%= customer.phone %></span>
                </li>
  
                <li>
                  <i class="fa fa-envelope"></i>
                  <a href="#"><%= customer.email%></a>
                </li>
              </ul>
  
              
            </div>
          </div>
  
          <div class="button-group">
           
            <div class="action-buttons">
              <a class="btn btn-primary" href="/profile/update">Update Profile</a>
             
            </div>
          </div>
        </div>
      </header>
    <main>


  
  
  
    </main>
    <%- include('../partials/footer')%>
  </body>
</html>
