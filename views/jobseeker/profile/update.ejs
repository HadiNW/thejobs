<!DOCTYPE html>
<html lang="en">
 <%- include('../partials/header')%>

  <body class="nav-on-header smart-nav">

    <!-- Navigation bar -->
    <%-include('../partials/menu') %>
   

        <!-- Page header -->
        <header class="page-header">
          <div class="container page-name">
            <h1 class="text-center">update your profile</h1>
            <p class="lead text-center">Create your resume and put it online.</p>
          </div>
  
          <div class="container">  
           <form action="/profile/update" method="post" enctype="multipart/form-data" >
            <div class="row">
              <div class="col-xs-12 col-sm-4">       
                <div class="form-group">
                  <input required type="file" name="image" class="dropify" data-default-file="http://localhost:8000/static/uploads/photos/<%= user.photo%>">
                  <span class="help-block">Please choose a 4:6 profile picture.</span>
                </div>        
              </div>
  
              <div class="col-xs-12 col-sm-8">
                <div class="form-group">
                  <input type="text" class="form-control input-lg" value="<%= customer.name%>" name="name">
                </div>
                
                <div class="form-group">
                  <input type="text" class="form-control" value="<%= customer.headline%>" name="headline" placeholder="Headline (e.g. Front-end developer)">
                </div>
  
                <div class="form-group">
                  <textarea name="description" class="form-control" rows="3" placeholder="Short description about you"><%= customer.description%></textarea>
                </div>
  
                <hr class="hr-lg">
  
                <h6>Basic information</h6>
                <div class="row">
  
                  <div class="form-group col-xs-12 col-sm-6">
                    <div class="input-group input-group-sm">
                      <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
                      <input type="text" class="form-control" value="<%= customer.location%>" name="location" placeholder="Location, e.g. Jakarta">
                    </div>
                  </div>
  
                
  
  
                  <div class="form-group col-xs-12 col-sm-6">
                    <div class="input-group input-group-sm">
                      <span class="input-group-addon"><i class="fa fa-birthday-cake"></i></span>
                      <input type="date" class="form-control" name="birthdate"  placeholder="Age">
                     
                    </div>
                  </div>
  
                  <div class="form-group col-xs-12 col-sm-6">
                    <div class="input-group input-group-sm">
                      <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                      <input type="text" class="form-control" value="<%= customer.phone %>" name="phone" placeholder="Phone number">
                    </div>
                  </div>
  
                  <div class="form-group col-xs-12 col-sm-6">
                    <div class="input-group input-group-sm">
                      <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                      <input disabled type="text" class="form-control" value="<%= customer.email%>" name="email" placeholder="Email address">
                    </div>
                  </div>
                </div>
              </div>
            </div>
  
            <div class="button-group">
              <div class="action-buttons">  
                <div class="upload-button">
                  <button type="submit" class="btn btn-block btn-primary">Update</button>
                </div>
              </div>
            </div>
          </div>
        </form>
        </header>
       
  

    <%- include('../partials/footer')%>
  </body>
</html>
